<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="5dp"

    android:weightSum="1"
    tools:context="note.android.vn.note.WriteNoteActivity">

    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/nen">

        <TextView
            android:id="@+id/tv_creat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="bottom"
            android:layout_margin="15dp"
            android:gravity="center"
            android:text="lưu "
            android:textColor="@color/red"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerInParent="true"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:text="Notes"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/layout1"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:weightSum="1">

        <EditText
            android:id="@+id/edt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên sự kiện :...................."
            android:gravity="top"
            android:lines="2"

            android:maxLines="1"
            android:textColor="@color/den"
            android:textColorHint="@color/xanhchu"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.88"
            android:background="@color/a"
            android:orientation="vertical">

            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/tv_dename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nội dung công việc"
                android:textColor="@color/xanhchu" />

            <EditText
                android:id="@+id/edt_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"

                android:gravity="top|left"
                android:hint="..."

                android:textSize="16sp"
                android:layout_below="@+id/tv_dename" />


        </RelativeLayout>
    </LinearLayout>

    <LinearLayout

        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="68dp"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_title_time"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:textColor="@color/xanhchu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="thời gian công việc:"
                android:textSize="13sp"/>
            <ImageButton
                android:id="@+id/ib_timer"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/timer"
                android:layout_centerInParent="true" />
            <LinearLayout
                android:id="@+id/layout_time"
                android:layout_toRightOf="@+id/ib_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="right"
                >

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
android:layout_marginLeft="10dp"

                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:text="12/12/2017"
                    android:textColor="@color/xanhchu"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_timer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="04:08"
                    android:textColor="@color/xanhchu"
                    android:textSize="12sp"
                    android:layout_gravity="bottom"/>
            </LinearLayout>
        </RelativeLayout>





    </LinearLayout>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </RelativeLayout>


</RelativeLayout>
